# Server
PORT=3001
NODE_ENV=development
LOG_LEVEL=info
SERVER_URL=http://localhost:3001

# MongoDB (required)
# Local dev: use directConnection to bypass replica set hostname resolution
MONGO_URI=mongodb://localhost:27017/?directConnection=true
# Docker: use replica set with container hostnames
# MONGO_URI=mongodb://mongo1:27017,mongo2:27017,mongo3:27017/?replicaSet=rs0
MONGO_DB_NAME=order_db

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Downstream Services
INVENTORY_SERVICE_URL=http://localhost:3002

# Telemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_DEBUG=false

# Loki (for logs)
LOKI_URL=http://localhost:3100

# Backup Configuration (WAL-based incremental backup)
# Enable backup worker
BACKUP_ENABLED=true
# Hour of day to run daily backup (0-23, default: 2 AM)
BACKUP_HOUR=2
# WAL retention in days
WAL_RETENTION_DAYS=7
# Snapshot retention in days
SNAPSHOT_RETENTION_DAYS=30
# Use filesystem provider instead of mock (for production)
BACKUP_USE_FILESYSTEM=false
# Directory for filesystem backups
BACKUP_DIR=/tmp/backups
