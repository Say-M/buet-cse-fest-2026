# Server
PORT=9000
NODE_ENV=development
LOG_LEVEL=info
SERVER_URL=http://localhost:9000

# MongoDB (required)
# Local dev: use directConnection to bypass replica set hostname resolution
MONGO_URI=mongodb://localhost:27017/?directConnection=true
# Docker: use replica set with container hostnames
# MONGO_URI=mongodb://mongo1:27017,mongo2:27017,mongo3:27017/?replicaSet=rs0
MONGO_DB_NAME=auth_db

# JWT Authentication (use one method)
# Option 1: Simple secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Option 2: EdDSA keys (more secure, for production)
# PRIVATE_JWK={"kty":"OKP","crv":"Ed25519","x":"...","d":"..."}
# PUBLIC_JWK={"kty":"OKP","crv":"Ed25519","x":"..."}

# Telemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_DEBUG=false
