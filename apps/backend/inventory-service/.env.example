# Server
PORT=3002
NODE_ENV=development
LOG_LEVEL=info
SERVER_URL=http://localhost:3002

# MongoDB (required)
# Local dev: use directConnection to bypass replica set hostname resolution
MONGO_URI=mongodb://localhost:27017/?directConnection=true
# Docker: use replica set with container hostnames
# MONGO_URI=mongodb://mongo1:27017,mongo2:27017,mongo3:27017/?replicaSet=rs0
MONGO_DB_NAME=inventory_db

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Gremlin Latency Simulation
GREMLIN_ENABLED=true
GREMLIN_FREQUENCY=5
GREMLIN_MIN_DELAY_MS=5000
GREMLIN_MAX_DELAY_MS=8000

# Telemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_DEBUG=false

# Loki (for logs)
LOKI_URL=http://localhost:3100
